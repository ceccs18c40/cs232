# !/bin/bash

#take inputs
echo "Enter a number :"
read a
read b
echo "Enter Choice :"
echo "1. Addition"
echo "2. Subtraction"
echo "3. Division"
echo "4. Multiplication"
read opr
#using statements
if [ $opr = "1" ]
   then
     echo $((a+b))
elif [ $opr = "2" ]
     then
      echo $((a-b))
elif [ $opr = "3" ]
     then
      echo $((a/b))
elif [ $opr = "4" ]
     then
       echo $((a*b))
fi
exit 0

